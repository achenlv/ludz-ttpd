server {
    listen 80;
    listen [::]:80;

    server_name ludz.blondais.lv;
    server_tokens off;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://ludz.blondais.lv$request_uri;
    }
}

server {
    listen 80;
    server_name ludz.blondais.lv;
    # server_tokens off;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all traffic to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name ludz.blondais.lv;

    # SSL certificate and key paths (replace with actual paths)
    ssl_certificate /etc/letsencrypt/live/ludz.blondais.lv/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ludz.blondais.lv/privkey.pem;

    # Optional: Additional SSL settings (adjust as needed)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!DH:!EXPORT:!LOW:!MD5:!RC4:!3DES:!PSK;
    ssl_stapling on;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload";

    # Serve your application content from here
    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}